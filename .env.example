# ===============================================
# RAG System - Environment Configuration
# ===============================================
# Copy this file to .env and fill in your values

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
DB_USER=raguser
DB_PASSWORD=ragpassword
DB_NAME=rag_db
DB_PORT=5432
DB_HOST=localhost

# ===============================================
# LLM API KEYS
# ===============================================
# At least ONE of these is required for the system to work

# OpenAI (GPT-3.5, GPT-4)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google (Gemini)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ===============================================
# DEFAULT LLM SETTINGS
# ===============================================
# Which LLM to use by default (openai, anthropic, google)
DEFAULT_LLM_PROVIDER=openai

# Which model to use by default
# OpenAI: gpt-3.5-turbo, gpt-4, gpt-4-turbo
# Anthropic: claude-3-opus, claude-3-sonnet, claude-3-haiku
# Google: gemini-pro, gemini-1.5-pro
DEFAULT_MODEL=gpt-3.5-turbo

# ===============================================
# APPLICATION SETTINGS
# ===============================================
# Enable debug mode (true/false)
DEBUG=true

# Application name
APP_NAME="RAG Customer Support"

# App version
APP_VERSION=1.0.0

# ===============================================
# CORS CONFIGURATION
# ===============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===============================================
# PORT CONFIGURATION
# ===============================================
# Backend API port
BACKEND_PORT=8000

# Frontend development server port
FRONTEND_PORT=5173

# ===============================================
# FRONTEND ENVIRONMENT
# ===============================================
# Backend API URL (for frontend)
VITE_API_URL=http://localhost:8000

# WebSocket URL (for frontend)
VITE_WS_URL=ws://localhost:8000/api/chat/ws

# ===============================================
# VECTOR STORE CONFIGURATION
# ===============================================
# ChromaDB persist directory
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# Embedding model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ===============================================
# FILE UPLOAD CONFIGURATION
# ===============================================
# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.pdf,.txt,.docx,.md,.csv

# ===============================================
# SECURITY (Production)
# ===============================================
# JWT secret key (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_change_in_production

# JWT algorithm
ALGORITHM=HS256

# Access token expire minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===============================================
# PERFORMANCE TUNING
# ===============================================
# Database connection pool size
DB_POOL_SIZE=5

# Maximum overflow connections
DB_MAX_OVERFLOW=10

# Vector search results limit
VECTOR_SEARCH_K=4

# ===============================================
# LOGGING
# ===============================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/app.log

# ===============================================
# REDIS (Optional - for caching)
# ===============================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# ===============================================
# MONITORING (Optional)
# ===============================================
# Sentry DSN for error tracking
# SENTRY_DSN=

# ===============================================
# NOTES
# ===============================================
# 1. Never commit .env file to version control
# 2. Use .env.example as template
# 3. At least one LLM API key is required
# 4. For production, change all default passwords
# 5. Generate new SECRET_KEY for production
